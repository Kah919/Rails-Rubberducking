<h1> Customizing Students Form</h1>

<% if flash[:error] %>
  <%= flash[:error].each do |msg| %>
    <p> <%= msg %> </p>
  <% end %>
<% end %>

<%= form_for @student do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :mod %>
  <%= f.text_field :mod %>

  <%= f.submit "Confirm Customization" %>
<% end %>
