<h1> Customize Duck Form</h1>

<% if flash[:error] %>
  <%= flash[:error].each do |msg| %>
    <p> <%= msg %> </p>
  <% end %>
<% end %>

<%= form_for @duck do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.collection_select(:student_id, Student.all, :id, :name) %>

  <%= f.submit "Cutomize!" %>
<% end %>
